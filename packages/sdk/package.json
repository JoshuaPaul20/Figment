{
  "name": "@figmentdev/sdk",
  "version": "0.1.0",
  "description": "Core SDK for brand-aware AI code generation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    
    "./brand-context": {
      "import": "./dist/brand-context.js",
      "types": "./dist/brand-context.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    
    "test": "echo \"No tests for sdk package yet\"",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["mcp", "design-system", "ai", "brand-guide", "claude"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    
    "cosmiconfig": "^9.0.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.5.4",
    "tsup": "^8.0.1",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}